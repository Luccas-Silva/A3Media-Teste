import Template2Content from '../../components/Template2Content.astro';

export const getStaticPaths = async () => {
  return Array.from({ length: 1000 }, (_, i) => ({
    params: { id: (i + 1).toString() },
    props: { pageNumber: i + 1 },
  }));
};

const { pageNumber } = Astro.props;
