---
import { getEntryBySlug } from 'astro:content';
import { faker } from '@faker-js/faker';

const { id } = Astro.params;
const slug = `pagina-${id}`;

const page = await getEntryBySlug('template1', slug);

if (!page) {
  throw new Error(`Página "${slug}" não encontrada.`);
}

const title = page.data.title || faker.lorem.sentence();
const body = page.data.body || faker.lorem.paragraphs(3, '\n\n');
const image = page.data.image || `https://placehold.co/600x400?text=${encodeURIComponent(faker.lorem.word())}`;
---

<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
</head>
<body>
  <main>
    <h1>{title}</h1>
    <img src={image} alt={title} />
    <section innerHTML={body} />
  </main>
</body>
</html>
